parameter[p0c] = 2e9
bmad_com[radiation_damping_on] = T

q1: quad, l = 0.5, k1 = 1
q2: quad, l = 0.5, k1 = -1

d: drift, l = 0.3
b: sbend, l = 0.5, angle = pi/8

rf: rfcavity, l = 0.1, rf_frequency = 500e6, voltage = 1e7

sector: line = (d, q1, d, b, d, q2, d, b)
ring: line = (3*sector, rf, 8*sector, rf, 5*sector)

use, ring
